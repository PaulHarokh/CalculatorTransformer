<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/colorPrimaryDark"
    android:columnCount="5"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/idInputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_rowWeight="60"
        android:layout_columnSpan="5"
        android:focusable="false"
        android:gravity="start"
        android:layout_columnWeight="0"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/idResultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="10"
        android:layout_columnSpan="5"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            android:layout_marginStart="10dp"
            android:columnCount="3">

            <Button
                android:id="@+id/btn_7"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="9" />

            <Button
                android:id="@+id/btn_4"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="6" />

            <Button
                android:id="@+id/btn_1"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="3" />

            <Button
                android:id="@+id/btn_Dot"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="." />

            <Button
                android:id="@+id/btn_0"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="0" />

            <Button
                android:id="@+id/btn_Del"
                style="@android:style/Widget.Holo.Button"
                android:backgroundTint="#737070"
                android:text="Del" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:columnCount="2">

            <Button
                android:id="@+id/btn_lftbracket"
                android:backgroundTint="#C6BFBF"
                android:text="(" />

            <Button
                android:id="@+id/btn_rightbrckt"
                android:backgroundTint="#C6BFBF"
                android:text=")" />

            <Button
                android:id="@+id/btn_multiplic"
                android:backgroundTint="#C6BFBF"
                android:text="x" />

            <Button
                android:id="@+id/btn_div"
                android:backgroundTint="#C6BFBF"
                android:text=":" />

            <Button
                android:id="@+id/btn_plus"
                android:backgroundTint="#C6BFBF"
                android:text="+" />

            <Button
                android:id="@+id/btn_minus"
                android:backgroundTint="#C6BFBF"
                android:text="-" />

            <Button
                android:id="@+id/btn_clear"
                style="@style/Widget.AppCompat.Button.Colored"
                android:backgroundTint="#6C0505"
                android:text="C"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_rez"
                android:backgroundTint="#CABC3F"
                android:text="=" />

        </GridLayout>

    </LinearLayout>

</GridLayout>